generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model parametros {
  id              Int                          @id @default(autoincrement())
  unidade         String                   
  segregacao_fila Boolean                      @default(false)
  exibir_fila     Boolean                      @default(false)
  filas           parametro_filas_segregadas[] 
  tempo_mudanca_fila Int                         @default(15000)
}

model parametro_filas_segregadas {
  id           Int        @id @default(autoincrement())
  parametro_id Int
  nome_fila    String     
  parametro    parametros @relation(fields: [parametro_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fila_parametros_fk")
}

model caminhoes_chamados {
  id           Int      @id @default(autoincrement())
  nr_romaneio  String   
  unidade      String  
  data_chamado DateTime 
  fila         String   
  nr_placa_veiculo  String
  nm_motorista String
  telefone_motorista String
  cultura      String
  tipo_romaneio String
  entrou   Boolean      @default(false)
}
